<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aldrin.gradecomputation.MainActivity">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_marginTop="60dp"
            android:text="Quiz 1"
            android:textSize="20dp"
            android:id="@+id/text1"/>
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text1"
            android:layout_alignBottom="@+id/text1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/quiz1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Quiz 2"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:id="@+id/text2"
            android:layout_below="@+id/text1"/>
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/quiz2"
            android:layout_below="@+id/text1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Seatworks"
            android:textSize="20dp"
            android:id="@+id/text3"
            android:layout_below="@+id/text2"/>
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/stwrk"
            android:layout_alignBaseline="@+id/text3"
            android:layout_alignBottom="@+id/text3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_marginTop="10dp"
            android:paddingRight="20dp"
            android:text="Lab Exercises"
            android:textSize="20dp"
            android:id="@+id/text4"
            android:layout_below="@+id/text3"/>
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text3"
            android:id="@+id/labExer"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Major Exam"
            android:textSize="20dp"
            android:id="@+id/text5"
            android:layout_below="@+id/text4"/>
        <EditText
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/majExam"
            android:layout_alignBaseline="@+id/text5"
            android:layout_alignBottom="@+id/text5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Compute"
            android:id="@+id/compute"
            android:onClick="callSecondActivity"
            android:layout_below="@+id/majExam"
            android:layout_centerHorizontal="true" />
</RelativeLayout>
